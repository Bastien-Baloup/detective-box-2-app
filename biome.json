{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off"
      },
      "nursery": {
        "useImportRestrictions": "off"
      }
    }
  },
  "formatter": {
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "lineWidth": 120,
      "semicolons": "asNeeded",
      "trailingComma": "none"
    }
  },
  "json": {
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    },
    "formatter": {
      "lineWidth": 120
    }
  },
  "css": {
    "formatter": {
      "lineWidth": 120
    }
  }
}